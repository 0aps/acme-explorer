{
  "name": "acme-explorer-backend",
  "version": "1.0.0",
  "description": "Acme explorer backend to mange custom trips for explorers",
  "main": "src/index.ts",
  "author": "acme-explorer",
  "license": "MIT",
  "workspaces": [
    "./*"
  ],
  "scripts": {
    "start": "tsc && node dist/index.js",
    "dev": "ts-node-dev --poll src/index.ts",
    "debug": "nodemon --inspect --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/index.ts",
    "lint": "semistandard",
    "lint:prod": "eslint --max-warnings 0 \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env PORT=4000 NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --testMatch='**/tests.js' --coverage"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.15",
    "mongoose-to-swagger": "^1.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "redis": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/express-fileupload": "^1.2.2",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.4.0",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.17",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "faker": "^6.6.6",
    "jest": "^27.4.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "semistandard": "^16.0.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "transform": {}
  },
  "semistandard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "src/index.ts"
    ]
  }
}
